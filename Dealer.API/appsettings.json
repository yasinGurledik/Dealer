{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Dealer;User Id=postgres;password=123456;Port=5433"
  },
  "JwtSettings": {
    "SecretKey": "SuperSecretLongKeyChangeThisInProd",
    "Issuer": "Dealar",
    "Audience": "DealerClients",
    "ExpireMinutes": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Error",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "AllowedHosts": "*"
}
